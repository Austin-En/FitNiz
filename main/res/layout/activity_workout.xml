<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutActivity"
    android:background="@drawable/main_wallpaper">

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Workout"
        android:textSize="40dp"
        android:textStyle="bold"
        android:fontFamily="@font/advent_pro_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backButtonWorkout"
        android:layout_width="76dp"
        android:layout_height="71dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_left" />

    <Switch
        android:id="@+id/startSwitch"
        android:layout_width="216dp"
        android:layout_height="48dp"
        android:layout_marginTop="148dp"
        android:text="Start:"
        android:textSize="30dp"
        android:fontFamily="@font/advent_pro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:text="Timer:"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/advent_pro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419" />

    <Chronometer
        android:id="@+id/workoutTimer"
        android:layout_width="194dp"
        android:layout_height="39dp"
        android:layout_marginStart="24dp"
        android:textSize="30dp"
        android:fontFamily="@font/advent_pro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toEndOf="@+id/textView37"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/viewWorkoutPlansButton"
        android:layout_width="288dp"
        android:layout_height="89dp"
        android:layout_marginBottom="208dp"
        android:background="@drawable/ic_button_design"
        android:fontFamily="sans-serif"
        android:text="View Workout Plans"
        android:textSize="23dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/finishButton"
        android:layout_width="155dp"
        android:layout_height="67dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/ic_button_design"
        android:fontFamily="sans-serif"
        android:text="Finish"
        android:textSize="23dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>